
@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div id="brand" class="row mt-3">
            <div class="col-lg-6 col-md-6 col-sm-6 ">
                <img class="img-fluid" src="/imagenes/logo.jpg"/>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h1>Osihiness</h1>
                <span class=" Slogan"> La experiencia del sabor </span>
            </div>
        </div>
    </div>
</div>



<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <ol class="carousel-indicators">
    <li data-bs-target="#carousel" data-bs-slide-to="0" class="active"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="1"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="2"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="3"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="4"></li>

  </ol>
  <div class="carousel-inner ">
    <div class="carousel-item active ">
      <img class="d-block " src="/imagenesAyuda/r1.jpg" alt="First slide" >
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 " src="/imagenesAyuda/r2.jpg" alt="Second slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 " src="/imagenesAyuda/r3.jpg" alt="Third slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 " src="/imagenesAyuda/r4.jpg" alt="Fourth slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 " src="/imagenesAyuda/r5.jpg" alt="Fifth slide" />
    </div>
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
</div>

<div class="container ">
        <div id="Botones" class="row mt-3 ">
            <p class="col-12 ">
                <button class="boton-circular col-lg-4 col-md-4 col-sm-12 mt-2">
                    <a  asp-area="" asp-controller="Menu" asp-action="Index" >Entradas</a>
                </button>
                <button class="boton-circular col-lg-4 col-md-4 col-sm-12 mt-2">
                    <a asp-area="" asp-controller="Menu" asp-action="Index" >Comidas</a>
                </button>
                <button class="boton-circular col-lg-4 col-md-4 col-sm-12 mt-2">
                    <a asp-area="" asp-controller="Menu" asp-action="Index" >Bebidas</a>
                </button>
            </p>
     </div>
</div>




